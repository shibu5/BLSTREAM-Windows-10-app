<Page
    x:Class="Pat_1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Pat_1.ViewModel" xmlns:helpers="using:Pat_1.Pomocnicze">
    <Grid x:ConnectionId='1' x:Name="main_grid"  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <Grid Height="{Binding picture_height}" Width="{Binding picture_width}">
                <CaptureElement x:ConnectionId='3' x:Name="myCaptureElement" />
                <Image x:ConnectionId='4' Source ="{Binding adres_img}"                       />
            </Grid>
            <Border Margin="0,5,0,0" BorderThickness="2,2,2,2" BorderBrush="#FF4A79A0" HorizontalAlignment="Center" Width="{Binding picture_width}">
                <TextBlock Text="{Binding text}" TextWrapping="Wrap" />
            </Border>
            <Button x:ConnectionId='2' Content="Take Picture" Height="40" Width="120" HorizontalAlignment="Center" Margin="0,5,0,0"                     />
        </StackPanel>
    </Grid>
</Page>

